{
    "name": "Laverna",
    "id": "laverna",
    "packaging_format": 1,
    "description": {
        "en": "Taking note application with Markdown editor and encryption support",
        "fr": "Application de Prise de note avec éditeur Markdown et chiffrement"
    },
        "version": "0.7.51~ynh5",
    "url": "https://laverna.cc/index.html",
    "upstream": {
        "license": "MPL-2.0",
        "website": "https://laverna.cc/index.html",
        "demo": "https://laverna.cc/app/",
        "admindoc": "https://github.com/Laverna/laverna/wiki",
        "code": "https://github.com/Laverna/laverna"
    },
    "license": "MPL-2.0",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">> 4.2.4"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/laverna",
                "default": "/laverna"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "help": {
                    "en": "If enabled, Laverna will be accessible by people who do not have an account. This can be changed later via the webadmin.",
                    "fr": "Si cette case est cochée, Laverna sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
